{
  "name": "react-starter",
  "version": "0.6.0",
  "description": "A react, typescript, sass, jest, webpack starter project",
  "main": "index.js",
  "scripts": {
    "start": "cross-env env=dev webpack serve --config webpack/webpack.config.ts",
    "build": "cross-env env=prod webpack --config webpack/webpack.config.ts",
    "analyze": "cross-env env=prod analyze=true webpack --config webpack/webpack.config.ts",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint-types": "tsc --noEmit",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "update": "yarn upgrade-interactive",
    "audit-npm": "yarn npm audit"
  },
  "author": "kaspars putniņš",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.0-rc.6",
    "@statoscope/webpack-plugin": "^5.7.1",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
    "@testing-library/dom": "^8.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/css-minimizer-webpack-plugin": "^3.0.2",
    "@types/eslint": "^7.28.0",
    "@types/jest": "^27.0.1",
    "@types/mini-css-extract-plugin": "^2.2.0",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@types/webpack-dev-server": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-claims-intake": "^3.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.1.0",
    "jest-junit": "^12.2.0",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.2.2",
    "prettier": "^2.3.2",
    "react-refresh": "^0.10.0",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.39.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.0",
    "webpack-merge": "^5.8.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest-junit": {
    "outputDirectory": "./coverage"
  },
  "packageManager": "yarn@3.1.1"
}